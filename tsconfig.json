{
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "resolveJsonModule": true,
        "allowJs": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "sourceMap": true,
        "paths": {
            "@/*": ["./*"]
        },
    },
    "exclude":[
        "./node_modules"
    ],
}